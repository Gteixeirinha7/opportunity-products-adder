<aura:component controller="ProductFieldFilterController">        
	<ltng:require styles="/resource/SLDS203/assets/styles/salesforce-lightning-design-system.css" />
    
    <aura:attribute type="String" name="filterCriteria" required="true" />
    <aura:attribute type="String" name="operator" default=""/>
    <aura:attribute type="String" name="fieldValue" />
    <aura:attribute type="String[]" name="operators" default="['Equals','Not equals','Contains','Start with']"/>
    <aura:attribute type="ProductFieldFilterController.OptionList[]" name="fieldList" />
    <aura:attribute type="String" name="fieldName" default=""/>
    <aura:handler name="init" action="{!c.doInitiateProductFields}" value="{!this}"/>    
    <div class="slds-grid">
        <div class="slds-col">
            <ui:inputSelect class="slds-select" value="{!v.fieldName}" aura:id="productFieldList" change="{!c.generateCriteria}" >
            </ui:inputSelect> 
        </div>
        <div class="slds-col">
           <ui:inputSelect class="slds-select" value="{!v.operator}" aura:id="productFieldOperator" change="{!c.generateCriteria}" >            
            </ui:inputSelect>  
        </div>
        <div class="slds-col">
            <ui:inputText value="{!v.fieldValue}" change="{!c.generateCriteria}" />
        </div>
    </div>
</aura:component>